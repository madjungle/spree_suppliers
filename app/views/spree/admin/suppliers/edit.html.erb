<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:editing_supplier) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:back_to_suppliers_list), admin_suppliers_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @supplier } %>

<%= form_for(@supplier, :url => admin_supplier_path, :method => :put) do |f| %>
  <%= render 'form', :f => f %>

  <div class="clear"></div>

  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>
