<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:suppliers) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_supplier), new_object_url, :icon => 'icon-plus', :id => 'admin_new_supplier_link' %>
  </li>
<% end %>

<% if @suppliers.empty? %>
  <div class="no-objects-found">
    <%= t(:none) %>
  </div>
<% else %>
  <table class="index" id="suppliers" data-hook>
    <colgroup>
      <col style="width: 35%" />
      <col style="width: 30%" />
      <col style="width: 20%" />
      <col style="width: 15%" />
    </colgroup>
    <thead>
      <tr data-hook="suppliers_header">
        <th><%= t(:supplier_name) %></th>
        <th><%= t(:email) %></th>
        <th><%= t(:phone) %></th>
        <th class="actions">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr id="<%= spree_dom_id supplier %>" data-hook="supplier_row" class="<%= cycle('odd', 'even') %>">
          <td><%= supplier.name %></td>
          <td><%= supplier.email %></td>
          <td><%= supplier.phone %></td>
          <td class="actions">
            <%= link_to_edit supplier, :no_text => true %>
            <%= link_to_delete supplier, :no_text => true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
